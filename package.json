{
    "name": "otus-highload",
    "version": "0.0.1",
    "description": "",
    "author": "mustordont@gmail.com",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "docker": "docker-compose -f ./tools/docker-compose.yml up",
        "prepare": "husky install",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --max-warnings=0",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "pre-commit": "lint-staged",
        "prettier": "prettier --write \"./**/*.{js,jsx,ts,tsx}\"",
        "release": "standard-version",
        "release:patch": "standard-version --release-as patch",
        "release:minor": "standard-version --release-as minor",
        "release:major": "standard-version --release-as major",
        "migrate": "npx nestjs-command migrate"
    },
    "dependencies": {
        "@nanogiants/nestjs-swagger-api-exception-decorator": "^1.6.5",
        "@nestjs/axios": "0.1.0",
        "@nestjs/common": "^9.0.11",
        "@nestjs/core": "^9.0.11",
        "@nestjs/platform-express": "^9.0.11",
        "@nestjs/swagger": "^6.0.0",
        "@nestjs/typeorm": "^9.0.1",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "csv-parse": "^5.4.0",
        "js-yaml": "^4.1.0",
        "jsonwebtoken": "^9.0.0",
        "nestjs-command": "^3.1.3",
        "pg": "^8.11.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "swagger-ui-express": "^4.1.6",
        "typeorm": "^0.3.16"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.1",
        "@commitlint/config-conventional": "^16.2.1",
        "@nestjs/cli": "^9.1.1",
        "@nestjs/schematics": "^9.0.1",
        "@nestjs/testing": "^9.0.11",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.5.1",
        "@types/node": "^16.0.0",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^7.0.4",
        "jest": "27.0.6",
        "lint-staged": "^12.3.3",
        "prettier": "^2.5.1",
        "standard-version": "^9.3.2",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
